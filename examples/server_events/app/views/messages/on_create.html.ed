<table>
	<tr>
		<th>Text</th>
	</tr>
<% foreach(Message message ; controller._messages) { %>
	<tr>
		<td><%= message.text %></td>
		<td><%#link_to("Show", "/messages/show/" ~ to_s(message.id))%></td>
		<td><%#link_to("Edit", "/messages/edit/" ~ to_s(message.id))%></td>
		<td><%#link_to("Destroy", "/messages/destroy/" ~ to_s(message.id), "onclick=\"post_href('delete'); return false;\"")%></td>
	</tr>
<% } %>
</table>


